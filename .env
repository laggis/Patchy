# Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# Your Discord bot token (get from https://discord.com/developers/applications)
DISCORD_TOKEN=YourTokenHere

# Discord channel ID where notifications will be sent
CHANNEL_ID=your_channel_id_here

# Path to watch for file changes (relative or absolute)
# Default: ./watched_files
WATCH_PATH=D:\FileServer

# Auto-commit mode (true = automatic notifications, false = manual !commit command)
# Default: true
AUTO_COMMIT=false

# Admin Users (comma-separated Discord user IDs)
ADMIN_USERS=1130574602033180734,408659138030206990